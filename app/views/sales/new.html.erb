<%=form_with model: @sale do |f|%>

  <%= f.label :code %> <br>
  <%= f.number_field :code %> <br>

  <%= f.label :detail %> <br>
  <%= f.text_area :detail %> <br>

  <%= f.label :category %> <br>
  <%= f.text_field :category %> <br>

  <%= f.label :value %> <br>
  <%= f.number_field :value %> <br>

  <%= f.label :discount %> <br>
  <%= f.number_field :discount %> <br>

  <%= f.label :tax, "Excento de impuesto" %> <br>
  <%= f.check_box :tax %> <br>

  <%= f.label :total %> <br>
  <%= f.number_field :total %> <br> <br>

  <%= f.submit "Crear" %> <br>
<% end %>
